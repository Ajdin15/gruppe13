@model CreateSjekklisteSjekkpunktViewModel
@{
    ViewData["Title"] = "Checklist Details";
}

<h2>Checklist Details</h2>

<div class="form-group">
    <label>Sjekkliste ID:</label>
    <span class="form-control">@Model.SjekklisteId</span>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Category</th>
            <th>Checkpoint</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.SjekkpunkterWithStatus.Count; i++)
        {
            <tr>
                <td>
                    @Model.SjekkpunkterWithStatus[i].Sjekkpunkt.Kategori.KategoriNavn
                </td>
                <td>
                    @Model.SjekkpunkterWithStatus[i].Sjekkpunkt.SjekkpunktNavn
                </td>
                <td>
                    @Model.SjekkpunkterWithStatus[i].Status
                </td>
            </tr>
        }
    </tbody>
</table>
